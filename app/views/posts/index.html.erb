<div class="toptext">
<h1>All posts by <%= @user.name %></h1>

<%= render 'shared/buttons', post: @post%>
</div>

<%= render 'shared/userhead', user: @user%>

<div class="allposts">  
<% @posts.each do |post| %>
<%= link_to user_post_path(post.author_id, post.id) do%>
   <%= render 'shared/post', post: post%>
   <% end %> 
   <div class="commentlist">
        <% post.recent_comments.includes([:author]).each do |comment| %>
       <p> <%=comment.author.name%>: <%=comment.text%> </p>
      
         <% end %> 
      </div>
<%end %>

<button type="button" class="buttonlink">Pagination</button>

</div>